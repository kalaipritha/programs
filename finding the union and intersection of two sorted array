#include<iostream>
using namespace std;
void union_intersect(int a1[],int a2[],int n,int m)
{
	int i=0,j=0,s,inter[10];
	while(i<n&&j<m)
	{
		if(a1[i]<a2[j])
		{
			cout<<a1[i]<<",";
			i++;
		} 
		else if(a1[i]>a2[j])
		{
			cout<<a2[j]<<",";
			j++;
		}
		else
		{
			cout<<a1[i]<<",";
			inter[s++]=a1[i];
			i++;
			j++;
		}
	}
		while(j<m)
		{
			cout<<a2[j]<<",";
			j++;
		}
		while(i<n)
		{
			cout<<a1[i]<<",";
			i++;
		}
	cout<<"\n the intersection is";
	for(i=0;i<s;i++)
	cout<<inter[i]<<",";
}
int main()
{
   int n,i,m;
   cout<<"enter the number of elements";
   cin>>n;
   int a1[100],a2[100];
   cout<<"\nenter the array elements :";
   for(i=0;i<n;i++)
   {
       cin>>a1[i];
   }
    cout<<"\nenter the number of elements";
   cin>>m;
   cout<<"\nenter the array elements :";
   for(i=0;i<m;i++)
   {
       cin>>a2[i];
   }
   cout<<"\nthe union is";
   union_intersect(a1,a2,n,m);
   return 0;
}
