#include <iostream>
#include<limits.h>
using namespace std;

int main()
{
   int n,i;
   cout<<"enter the number of elements";
   cin>>n;
   int a[n];
   cout<<"enter the array elements :";
   for(i=0;i<n;i++)
   {
       cin>>a[i];
   }
   int first,second,third;
   first=second=third= INT_MIN;
   for(i=0;i<n;i++)
   {
       if(a[i]>first)
       {
           third=second;
           second=first;
           first=a[i];
       }
       else if(a[i]>second)
       {
           third=second;
           second=a[i];
       }
       else
       {
           third=a[i];
       }
   }
   cout<<"\nthe first three largest elements are :"<<first<<" "<<" "<<second<<" "<<third;
   
   return 0;
}
